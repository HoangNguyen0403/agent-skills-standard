{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Skill Validation Config",
  "type": "object",
  "properties": {
    "project": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "repoUrl": { "type": "string" },
        "branch": { "type": "string", "default": "main" },
        "framework": {
          "type": "string",
          "enum": ["flutter", "react", "nestjs", "nextjs", "other"]
        }
      },
      "required": ["name", "repoUrl", "framework"]
    },
    "scenarios": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "prompt": { "type": "string" },
          "successCriteria": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["title", "prompt"]
      }
    }
  },
  "required": ["project", "scenarios"]
}
