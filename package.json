{
  "name": "agent-skills-standard-root",
  "version": "1.3.2",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "pnpm": {
    "overrides": {
      "lodash": "^4.17.23"
    }
  },
  "scripts": {
    "build": "pnpm --filter ./cli build",
    "dev": "pnpm --filter ./cli dev",
    "lint": "pnpm --filter ./cli lint",
    "format": "pnpm --filter ./cli format",
    "format:check": "pnpm --filter ./cli format:check",
    "lint:check": "pnpm --filter ./cli lint:check",
    "validate": "node cli/dist/index.js validate",
    "validate:all": "node cli/dist/index.js validate --all",
    "test": "pnpm --filter ./cli test",
    "test:coverage": "pnpm --filter ./cli test:coverage",
    "release-skill": "pnpm --filter ./cli release-skill",
    "release-cli": "pnpm --filter ./cli release-cli",
    "calculate-tokens": "pnpm --filter ./cli calculate-tokens",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
